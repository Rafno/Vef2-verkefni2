extends layout
block content
    form(method = 'post' action = '/')
        div(class="table-wrapper")
            table
                thead
                    tr
                        th id
                        th dagsetning
                        th name
                        th email
                        th ssn
                        th amount
                tbody
                    for i in data
                        tr
                            td=i.id
                            td=i.date
                            td=i.name
                            td=i.email
                            td=i.ssn
                            td=i.amount
        div(class="Bottom")
            a(href ='/download') Niðurhala
            a(href='/') Forsíða
